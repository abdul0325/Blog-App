generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(cuid())
  email    String    @unique
  password String
  name     String
  posts    Post[]
  products Product[]
}

model Post {
  id        String   @id @default(cuid())
  title     String
  content   String
  createdAt DateTime @default(now())
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
}

model Product {
  id            String   @id @default(cuid())
  name          String
  description   String?
  brand         String?
  category      String?
  price         Float
  stockQuantity Int
  variants      Json? // colors, size ..
  rating        Float?   @default(0.0)
  totalReviews  Int?     @default(0)
  tags          String[]
  views         Int      @default(0) // Number of times product detail viewed
  clicks        Int      @default(0) // Number of times product clicked
  createdAt     DateTime @default(now())
  authorId      String
  author        User     @relation(fields: [authorId], references: [id])
}
